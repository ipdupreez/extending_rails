<h1>Invoices</h1>

<table id="data_table" class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>Invoice Number</th>
    <th>Invoice Date</th>
    <th>Total</th>
    <th>Approved</th>
    <th>Vat Total</th>
    <th>Customer Name</th>
    <th>Sent</th>
    <th>Is Void</th>
    <th>Paid</th>
    <th>Outstanding</th>
    <th>Sub Total</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @invoices.each do |invoice| %>
      <tr>
        <% present(invoice) do |inv| %>
            <td><%= invoice.invoice_number %></td>
            <td><%= invoice.invoice_date %></td>
            <td><%= inv.total %></td>
            <td><%= inv.is_approved %></td>
            <td><%= inv.vat_total %></td>
            <td><%= invoice.customer_name %></td>
            <td><%= inv.is_sent %></td>
            <td><%= inv.is_void %></td>
            <td><%= inv.is_paid %></td>
            <td><%= inv.outstanding %></td>
            <td><%= inv.sub_total %></td>
            <td><%= inv.invoice_actions %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
    $(document).ready(function() {
        $('#data_table').DataTable( {
        });
    } );
</script>